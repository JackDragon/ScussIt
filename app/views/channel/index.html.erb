<div class="container-fluid">
  <div class="row-fluid">
    <div class="span9">
      <!--chatbox content-->
      <div class="chat" id="chatbox">

      </div>
    </div>
    <div class="span3">
      <div class="topic">
        <h5>Topics are coming in iteration 2.</h5>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <input id="message_input" type="text" maxlength="255" style="width: 500px; height: 35px" placeholder="Enter your message here...">
  <button id="send_button" onclick="click_send()" class="btn btn-primary">Send</button>
  <br>
  <br>
  <% if !current_user.nil? %>
    <% if !current_user.favorites.exists?(:channel_id => @channel.id) %>
      <button id=<%= @channel.api_id %> class="btn btn-primary follow" >Follow</button>
    <% else %>
      <button id=<%= @channel.api_id %> class="btn btn-primary follow" >Unfollow</button>
    <% end %>
  <% end %>
</div>

