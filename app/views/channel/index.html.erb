<!-- Javascript -->
<%= javascript_include_tag 'chatroom' %>  

<script type="text/javascript">
  jQuery(document).ready(function($) {

    // Binding the ENTER KEY
    $(document).bind('keypress', function(element) {
        if(element.keyCode==13){
             $('#send_button').trigger('click');
         }
    });

    id = <%= @channel.id %>
    get_messages(id);
  });
</script>
